{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "declaration": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "lib": ["es6", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021"],
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": false
    }
  }